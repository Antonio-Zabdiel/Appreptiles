<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#0E7759">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <Button
        android:id="@+id/button"
        android:layout_width="124dp"
        android:layout_height="135dp"
        android:onClick="goCocodrilos"
        android:textSize="20dp"
        android:text="Cocodrilos"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMainH2"
        app:layout_constraintStart_toStartOf="@+id/guidelineMainV1"
        app:layout_constraintTop_toTopOf="@+id/guidelineMainH1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="113dp"
        android:layout_height="140dp"
        android:layout_marginTop="56dp"
        android:onClick="goSquamatas"
        android:text="Squamatas"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMainH3"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMainV2"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/guidelineMainV1"
        app:layout_constraintTop_toTopOf="@+id/guidelineMainH2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="141dp"
        android:onClick="goQuelenios"
        android:text="Quelenios"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMainH4"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMainV2"
        app:layout_constraintStart_toStartOf="@+id/guidelineMainV1"
        app:layout_constraintTop_toTopOf="@+id/guidelineMainH3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="122dp"
        android:layout_height="105dp"
        android:onClick="goRinocefalos"
        android:text="Rinocefalos"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMainH5"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMainV2"
        app:layout_constraintStart_toStartOf="@+id/guidelineMainV1"
        app:layout_constraintTop_toTopOf="@+id/guidelineMainH4" />
</androidx.constraintlayout.widget.ConstraintLayout>